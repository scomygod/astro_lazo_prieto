---
const currentPath = Astro.url.pathname;
---
<nav>
  <a href="/homePage/homePage" class={currentPath === '/' || currentPath === '/homePage/homePage' ? 'active' : ''}>Home</a>
  <a href="/perfilPage/perfilPage" class={currentPath === '/perfilPage/perfilPage' ? 'active' : ''}>Perfil</a>
  <a href="/proyecto/proyecto" class={currentPath === '/proyecto/proyecto' ? 'active' : ''}>Proyectos</a>
  <a href="/proyecto2/proyecto2" class={currentPath === '/proyecto2/proyecto2' ? 'active' : ''}>Proyectos 2</a>
</nav>

<style>
  nav {
    background-color: #159;
    padding: 1rem;
  }
  a {
    color: white;
    margin-right: 1rem;
    text-decoration: none;
  }
  a.active {
    color: yellow;
    text-decoration: underline;
  }
  a:hover {
    text-decoration: underline;
  }
</style>
